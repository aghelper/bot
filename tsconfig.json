{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@agh/orm": [
        "libs/orm/src"
      ],
      "@agh/orm/*": [
        "libs/orm/src/*"
      ],
      "@agh/shared": [
        "libs/shared/src"
      ],
      "@agh/shared/*": [
        "libs/shared/src/*"
      ]
    }
  }
}